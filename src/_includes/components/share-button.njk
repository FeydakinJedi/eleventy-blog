<div
  x-data="{ showShareMenu: false, copyLink() { navigator.clipboard.writeText(window.location.href); this.showCopied = true;
    setTimeout(() => this.showCopied = false, 2000); }, showCopied: false }"
  class="fixed bottom-8 right-8 z-40">
  <!-- Share Menu -->
  <div
    x-show="showShareMenu"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 translate-y-2"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 translate-y-2"
    class="absolute bottom-full right-0 mb-4 bg-white rounded-xl shadow-lg p-4 min-w-[200px]"
    @click.outside="showShareMenu = false">
    <div class="space-y-3">
      <button
        @click="copyLink()"
        class="w-full flex items-center gap-3 p-2 hover:bg-secondary/5 rounded-lg transition-colors">
        <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0
              0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
        </svg>
        <span class="text-sm font-medium">Copy Link</span>
      </button>
      <a
        href="https://twitter.com/intent/tweet?url={{ page.url | url | absoluteUrl(metadata.url) | encodeURIComponent }}&text={{ title | encodeURIComponent }}"
        target="_blank"
        class="w-full flex items-center gap-3 p-2 hover:bg-secondary/5 rounded-lg transition-colors">
        <svg class="w-5 h-5 text-secondary" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384
          4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0
          01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0
          01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21
          0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
        </svg>
        <span class="text-sm font-medium">Share on Twitter</span>
      </a>
      <a
        href="https://www.linkedin.com/shareArticle?mini=true&url={{ page.url | url | absoluteUrl(metadata.url) | encodeURIComponent }}&title={{ title | encodeURIComponent }}"
        target="_blank"
        class="w-full flex items-center gap-3 p-2 hover:bg-secondary/5 rounded-lg transition-colors">
        <svg class="w-5 h-5 text-secondary" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136
          2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337
          7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064
          2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771
          24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
        <span class="text-sm font-medium">Share on LinkedIn</span>
      </a>
    </div>
  </div>
  <!-- Share Button -->
  <button
    @click="showShareMenu = !showShareMenu"
    class="bg-primary text-white p-3 rounded-full shadow-lg hover:bg-primary/90 transition-colors relative">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632
          3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0
          00-5.367-2.684z"/>
    </svg>
    <!-- Copy Success Message -->
    <div
      x-show="showCopied"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 translate-y-1"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 translate-y-1"
      class="absolute bottom-full right-0 mb-2 bg-secondary text-white text-sm px-3 py-1 rounded-lg whitespace-nowrap">
      Copied to clipboard!
    </div>
  </button>
</div>